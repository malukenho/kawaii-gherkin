{
  "name": "malukenho/kawaii-gherkin",
  "description": "A small library to check and fix annoying gherkin code style",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/malukenho/kawaii-gherkin",
  "keywords": [
    "gherkin",
    "code standard",
    "code style"
  ],
  "authors": [
    {
      "name": "Jefersson Nathan",
      "email": "malukenho@phpse.net"
    }
  ],
  "autoload": {
    "psr-4": {
      "KawaiiGherkin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KawaiiGherkinTest\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "behat/gherkin": ">=4.9",
    "sebastian/diff": ">=6.0",
    "symfony/console": ">=7.0",
    "symfony/finder": ">=7.0"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.0"
  },
  "bin": [
    "bin/kawaii"
  ],
  "config": {
    "allow-plugins": {
      "malukenho/mcbumpface": true
    }
  }
}
