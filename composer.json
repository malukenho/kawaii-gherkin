{
  "name": "malukenho/kawaii-gherkin",
  "description": "A small library to check and fix annoying gherkin code style",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/malukenho/kawaii-gherkin",
  "keywords": [
    "gherkin",
    "code standard",
    "code style"
  ],
  "authors": [
    {
      "name": "Jefersson Nathan",
      "email": "malukenho@phpse.net"
    }
  ],
  "autoload": {
    "psr-4": {
      "KawaiiGherkin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KawaiiGherkinTest\\": "tests/"
    }
  },
  "require": {
    "php": "~8.0",
    "behat/gherkin": "^v4.6.2",
    "sebastian/diff": "^4.0.4",
    "symfony/console": "^v5.1.8",
    "symfony/finder": "^v5.1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4.2",
    "malukenho/mcbumpface": "^1.1.5"
  },
  "bin": [
    "bin/kawaii"
  ]
}
