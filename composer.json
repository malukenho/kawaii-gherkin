{
  "name": "pedrotroller/kawaii",
  "description": "A small library to check and fix annoying gherkin code style",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "code standard",
    "code style",
    "formatting",
    "gherkin"
  ],
  "authors": [
    {
      "name": "PedroTroller",
      "homepage": "https://github.com/PedroTroller"
    },
    {
      "name": "Jefersson Nathan",
      "email": "malukenho@phpse.net"
    }
  ],
  "homepage": "https://github.com/pedrotroller/kawaii-gherkin",
  "require": {
    "php": "8.0.* || 8.1.* || 8.2.*",
    "behat/gherkin": "^4.9",
    "sebastian/diff": "^4.0",
    "symfony/console": "4.4.* || 5.4.* || 6.*",
    "symfony/finder": "4.4.* || 5.4.* || 6.*"
  },
  "require-dev": {
    "behat/behat": "^3.12",
    "pedrotroller/php-cs-custom-fixer": "^2.30",
    "phpstan/phpstan": "^1.9",
    "phpstan/phpstan-symfony": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "KawaiiGherkin\\": "src/"
    }
  },
  "bin": [
    "bin/kawaii"
  ]
}
